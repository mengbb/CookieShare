@model LoginViewModel
@{
}
<html>
<head>
    <title>登录</title>
</head>
<body class="gray-bg">
    <div class="container animated fadeInDown" style="width:300px">
        <form class="form-signin" asp-controller="Account" asp-action="Login" method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
            <h2 class="form-signin-heading">WebB</h2>
            <div class="login-wrap">
                <input type="text" asp-for="Account" class="form-control" placeholder="账号" autofocus>
                <span asp-validation-for="Account" class="text-danger"></span>
                <input type="password" asp-for="Password" class="form-control" placeholder="密码">
                <span asp-validation-for="Password" class="text-danger"></span>
                <label class="checkbox">
                    <span class="pull-right">
                        <input type="checkbox" value="remember-me"> 记住密码
                    </span>
                </label>
                <button class="btn btn-lg btn-login btn-block" style="margin-top:40px" type="submit">登  录</button>
            </div>
        </form>
    </div>
</body>
</html>